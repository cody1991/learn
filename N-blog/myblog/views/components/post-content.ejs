<div class="post-content">
	<div class="ui grid">
		<div class="four wide column">
			<a href="/posts?author=<%= post.author._id %>" class="avatar"
			data-title="<%= post.author.name %> | <%= ({m:'男',f:'女',x:'保密'})[post.author.gender] %>"
			data-content="<%= post.author.bio %>">
				<img src="/img/<%= post.author.avatar %>" class="avatar">
			</a>
		</div>
		<div class="eight wide column">
			<div class="ui segment">
				<h3>
					<a href="/posts/<%= post._id %>"><%= post.title %>
						
					<small style="color:#ccc;"> - by <%= post.author.name %></small>
					</a>

				</h3>
				<pre>
					<%- post.content %>
				</pre>
				<div>
					<span class="tag"><%= post.created_at %></span>
					<span class="tag right">
						<span>浏览(<%= post.pv %>)</span>
						<span>留言(<%= post.commentsCount %>)</span>
					</span>
					<% if(user&&post.author._id&&user._id.toString()===post.author._id.toString()) {%>
						<div class="ui inline dropdown">
							<div class="text"></div>
							<i class="dropdown icon"></i>
							<div class="menu">
								<div class="item">
									<a href="/posts/<%= post._id%>/edit>">编辑</a>
								</div>
								<div class="item">
									<a href="/posts/<%= post._id %>/remove">删除</a>
								</div>
							</div>
						</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
</div>