<%- include('header') %>

<div class="ui grid">
	<div class="four wide column">
		<a href="/posts?author=<%= user._id %>" 
		class="avatar" 
		data-title="<%= user.name %> | <%= ({m:'男',f:'女',x:'保密'})[user.gender] %>"
		data-content="<%= user.bio %>">
			<img src="/img/<%= user.avatar %>" class="avatar">
		</a>
	</div>
	<div class="eight wide column">
		<form action="/posts" class="ui form segment" method="post">
			<div class="field required">
				<label>标题</label>
				<input type="text" name="title">
			</div>
			<div class="field required">
				<label>内容</label>
				<textarea name="content" rows="10"></textarea>
			</div>
			<input type="submit" class="ui button" value="发布">
		</form>
	</div>

</div>

<%- include('footer') %>